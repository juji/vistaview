<section class="theme-selection-section">
	<h2>Theme Selection</h2>
	<p>
		Choose from a variety of beautiful themes to customize the look and feel of your VistaView galleries. Each theme is designed to enhance your images and fit seamlessly with your website's aesthetic.
	</p>
	<p><a href="/styling/themes/">Explore all themes â†’</a></p>
	<div id="theme-gallery" class="theme-gallery vista-view">
		<a href="https://picsum.photos/seed/9087/800/800" data-title="Image 3" class="img-3" target="_blank" rel="noopener">
			<img src="https://picsum.photos/seed/9087/200/200" alt="Image 3" />
		</a>
		<a href="https://picsum.photos/seed/1234765/800/800" data-title="Image 3" class="img-3" target="_blank" rel="noopener">
			<img src="https://picsum.photos/seed/1234765/200/200" alt="Image 3" />
		</a>
	</div>

</section>


<script>
	import 'vistaview/style.css';
  import { vistaView } from 'vistaview';
  import { selectBox } from 'vistaview/extensions/select-box';

  if (typeof vistaView === 'function') {
    vistaView({ 
      elements: '#theme-gallery a',
      controls: {
        bottomLeft: [],
        bottomCenter: ['selectBox'],
      },
      extensions: [
        selectBox({
          onSelect: (value: string) => {
            const theme = value;
            if (theme && theme !== 'default') {
              const link = document.createElement('link');
              link.rel = 'stylesheet';
              link.href = `vistaview/styles/${theme}.css`;
              document.head.appendChild(link);
            }
          },
          placeholder: 'Select Theme',
          selection: [
            { value: 'autumn-amber', text: 'Autumn Amber' },
            { value: 'cotton-candy', text: 'Cotton Candy' },
            { value: 'dark-rounded', text: 'Dark Rounded' },
            { value: 'ember-glow', text: 'Ember Glow' },
            { value: 'forest-moss', text: 'Forest Moss' },
            { value: 'green-lake', text: 'Green Lake' },
            { value: 'ice-crystal', text: 'Ice Crystal' },
            { value: 'lavender-fields', text: 'Lavender Fields' },
            { value: 'midnight-gold', text: 'Midnight Gold' },
            { value: 'midnight-ocean', text: 'Midnight Ocean' },
            { value: 'mint-chocolate', text: 'Mint Chocolate' },
            { value: 'neon-nights', text: 'Neon Nights' },
            { value: 'paper-light', text: 'Paper Light' },
            { value: 'retro-arcade', text: 'Retro Arcade' },
            { value: 'soft-neutral', text: 'Soft Neutral' },
            { value: 'stark-minimal', text: 'Stark Minimal' },
            { value: 'strawberry', text: 'Strawberry' },
          ],
        }),
      ],
    });
  }
</script>

<style is:global>
	.vvw-select-box{
		padding: 1rem;
	}
	.vvw-select-box-select {
		padding: 0.25rem 0.5rem;
	}
</style>

<style>
	/* Component-scoped styles */
	.theme-selection-section {
		padding: 2rem 0;
		text-align: start;
	}

	.theme-selection-section h2 {
		font-size: var(--sl-text-2xl);
		margin-bottom: 1rem;
	}

	.theme-selection-section p {
		max-width: 60ch;
		margin: 0 0 2rem 0;
		color: var(--sl-color-gray-2);
	}

	.theme-gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1rem;
	}

	.theme-gallery a {
		display: block;
		cursor: pointer;
		width: 100%;
		height: 200px;
		overflow: hidden;
		border-radius: 0.5rem;
		border: 1px solid var(--sl-color-gray-5);
	}

	.theme-gallery img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}
</style>