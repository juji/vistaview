<style>
	.theme-selection-section {
		padding: 2rem 0;
		text-align: start;
	}

	.theme-selection-section h2 {
		font-size: var(--sl-text-2xl);
		margin-bottom: 1rem;
	}

	.theme-selection-section p {
		max-width: 60ch;
		margin: 0 0 2rem 0;
		color: var(--sl-color-gray-2);
	}

	.theme-gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1rem;
	}

	.theme-gallery a {
		display: block;
		cursor: pointer;
		width: 100%;
		height: 100%;
		overflow: hidden;
		border-radius: 0.5rem;
		border: 1px solid var(--sl-color-gray-5);
	}

	.theme-gallery img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}
</style>